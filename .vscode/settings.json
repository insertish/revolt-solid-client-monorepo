{
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true,
    "**/tsconfig.json": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // Force to follow the `GUIDELINES.md`
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2
}